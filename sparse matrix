#include<stdio.h>

void sparse(int a[10][10], int m, int n);

int main() {
    int i, j, k = 1, a[10][10], m, n;
    
    printf("Enter the number of rows in the matrix:\n");
    scanf("%d", &m);
    printf("Enter the number of columns in the matrix:\n");
    scanf("%d", &n);
    
    printf("Enter the elements of the matrix:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &a[i][j]);
        }
    }
    
    printf("The given matrix is:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            printf("%d ", a[i][j]);
        }
        printf("\n");
    }
    
    sparse(a, m, n);
    return 0;
}

void sparse(int a[10][10], int m, int n) {
    int i, j, k = 1, s[10][10];
    
    s[0][0] = m; // Number of rows
    s[0][1] = n; // Number of columns
    
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            if (a[i][j] != 0) {
                s[k][0] = i;      // Row index
                s[k][1] = j;      // Column index
                s[k][2] = a[i][j]; // Value
                k++;
            }
        }
    }
    
    s[0][2] = k - 1; // Number of non-zero elements
    
    printf("\nTuple form:\n");
    for (i = 0; i <= s[0][2]; i++) {
        for (j = 0; j < 3; j++) {
            printf("%d\t", s[i][j]);
        }
        printf("\n");
    }
}
